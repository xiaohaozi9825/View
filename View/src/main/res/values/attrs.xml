<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--declare-styleable的name值好像没有明确规定，但一般使用自定义view的类名-->
    <declare-styleable name="AutoScrollView">
        <!-- 滚动速度。 slow：低速 ；horotelic_rate：中速 ；fast：快速 ；默认：horotelic_rate ；也可以是整数类型。 -->
        <attr name="autoScrollVelocity" format="integer">
            <enum name="slow" value="100" />
            <enum name="horotelic_rate" value="200" />
            <enum name="fast" value="300" />
        </attr>
        <!--滚动属性。exceed：超出滚动 ； always：永远滚动 ；默认：exceed-->
        <attr name="autoScrollAttribute">
            <!--value值只能是int类型的  所以获取时通过typeArray.getInt获取-->
            <enum name="exceed" value="1" />
            <enum name="always" value="2" />
        </attr>
        <!--滚动方向。horizontal：水平滚动 ；vertical：垂直滚动 ； 默认：horizontal-->
        <attr name="autoScrollDirection">
            <enum name="horizontal" value="1" />
            <enum name="vertical" value="2" />
        </attr>

    </declare-styleable>
    <declare-styleable name="LoginView">
        <!--        边框颜色-->
        <attr name="loginBorderColor" format="color" />
        <!--        边框宽度-->
        <attr name="loginBorderWidth" format="dimension" />

        <!--        填充色-->
        <attr name="loginContentColor" format="color" />

    </declare-styleable>

    <declare-styleable name="BubbleView">
        <!--        指向方向-->
        <attr name="bubbleIndicatorDirection" format="integer">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <!--        子控件是否填充指针处小三角形-->
        <attr name="bubbleFillIndicator" format="boolean" />
        <!--       气泡颜色-->
        <attr name="bubbleColor" format="color" />
        <!--    指示器高度，与圆角矩形垂直的边的长度-->
        <attr name="bubbleIndicatorHeight" format="dimension" />
        <!--        指示器宽度，贴着圆角矩形部分的长度-->
        <attr name="bubbleIndicatorWidth" format="dimension" />
        <!--        圆角半径-->
        <attr name="bubbleRadius" format="dimension" />
        <attr name="bubbleElevation" format="dimension" />
        <!--        阴影颜色-->
        <attr name="bubbleShadowColor" format="color" />
        <!--        指示器位置
        以指示器向左为例：
        start：指示器在上方，会留出圆角位置
        centre：指示器在中间，默认值
        end：指示器在下方，会留出圆角位置
        float类型范围在0-1之间，0对应start，0.5对应centre，1对应end
        dimension 0:中间，正数：从开始位置偏移，负数：从结束位置开始偏移
        -->
        <attr name="bubbleIndicatorLocation" format="dimension|float">
            <enum name="start" value="0" />
            <enum name="centre" value="1" />
            <enum name="end" value="2" />
        </attr>
    </declare-styleable>
</resources>